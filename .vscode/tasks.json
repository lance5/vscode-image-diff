// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Builds",
      "dependsOn": [
        "build_extension",
        "build_webview",
        "typecheck_extension",
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build_extension",
      "type": "npm",
      "script": "pack:extension:watch",
      "problemMatcher":[
        "$esbuild-watch"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "build_webview",
      "type": "npm",
      "script": "pack:webview:watch",
      "problemMatcher": [
        "$esbuild-watch"
      ],
      "isBackground": true,
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "typecheck_extension",
      "type": "npm",
      "script": "check:types:webview:watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "isBackground": true,
      "group": {
        "kind": "test",
      }
    }
  ]
}
